{
	"linter": {
		"rules": {
			"correctness": {
				"noUnusedVariables": {
					"level": "error",
					"fix": "none"
				}
			},
			"style": {
				"useConst": {
					"level": "warn",
					"fix": "unsafe"
				},
				"useImportType": "off",
				"useTemplate": {
					"level": "warn",
					"fix": "safe"
				}
			}
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"files": {
		"ignore": ["node_modules", ".next", "tmp", "**/mongoose*.ts"]
	}
}
